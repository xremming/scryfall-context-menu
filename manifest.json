{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "name": "Scryfall Context Menu",
  "description": "Search Magic: the Gathering cards with Scryfall by using the context menu.",
  "version": "0.4.0",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
